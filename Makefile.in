  $(INSTALL_SCRIPT) $(top_srcdir)/tests/AutoTests/PerlUtils/delete_cascade.pl $(dest_server_dir)/bin && \
  $(INSTALL_SCRIPT) $(top_srcdir)/tests/taskbot/xmlsh.pl $(dest_server_dir)/bin && \
